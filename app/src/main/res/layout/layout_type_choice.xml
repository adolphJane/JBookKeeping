<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">
        <RadioButton
            android:id="@+id/rb_outlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_left"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_outlay"
            android:textColor="@drawable/selector_tab_text_color"/>

        <RadioButton
            android:id="@+id/rb_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_right"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_income"
            android:textColor="@drawable/selector_tab_text_color"/>
    </RadioGroup>
</layout>